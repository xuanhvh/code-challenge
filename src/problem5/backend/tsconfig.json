{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "lib": [
            "es2015",
            "dom"
        ],
        "outDir": "dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "server.ts",
        "database/**/*.ts",
        "entities/**/*.ts",
        "repositories/**/*.ts",
        "services/**/*.ts",
        "controllers/**/*.ts"
    ]
}